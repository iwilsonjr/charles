{
  "name": "charles",
  "version": "1.0.0",
  "description": "The Wilson Project site",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:sass": "node-sass -w build/css/ -o css/ --source-map css/ --output-style expanded",
    "production:sass": "node-sass build/css/style.scss css/style.min.css --output-style compressed",
    "production": "npm run production:sass",
    "browser-sync": "browser-sync start --port 3000 --files=*.php,css/style.css --no-open --no-notify",
    "build:css": "npm run build:sass && npm run browser-sync"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/iwilsonjr/charles/"
  },
  "author": "Ivan Wilson",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.7.5",
    "browser-sync": "^2.18.8",
    "node-sass": "^4.5.0",
    "postcss-cli": "^3.0.0-beta"
  }
}

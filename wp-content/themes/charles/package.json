{
  "name": "charles",
  "version": "1.0.0",
  "description": "The Wilson Project site",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass -w build/css/style.scss css/style.min.css --output-style compressed --source-map css/style.css.map",
    "browser-sync": "browser-sync start --proxy http://localhost:3000 --files=*.php,*.css,*.js --no-open --no-notify",
    "uglify:main": "uglifyjs build/js/main.js --compress --mangle --o js/main.js",
    "uglify:touch": "uglifyjs build/js/touch.js --compress --mangle --o js/touch.js",
    "uglify:utility": "uglifyjs build/js/utility.js --compress --mangle --o js/utility.js",
    "uglify": "npm run uglify:main && npm run uglify:touch && npm run uglify:utility",
    "start": "npm run sass & npm run browser-sync",
    "production": "node rem_options.js & npm run uglify"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/iwilsonjr/charles/"
  },
  "author": "Ivan Wilson",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "node-sass": "^4.5.0",
    "postcss": "^5.2.15",
    "postcss-cli": "^3.0.0-beta",
    "postcss-pxtorem": "^4.0.0",
    "uglify-js": "^2.8.4"
  }
}
